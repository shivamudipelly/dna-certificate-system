# ==========================================
# Crypto Engine Environment Variables (Example)
# ==========================================

# Port the FastAPI service runs on
PORT=8000

# Security Keys (NEVER COMMIT REAL VALUES)
# 32-byte Base64 encoded AES key for encryption
AES_KEY=your_base64_encoded_32_byte_aes_key_here

# 256 character DNA sequence for mutation key (Must only contain A, T, C, G)
DNA_SECRET_KEY=ATCG... (must be exactly 256 characters)

# Chaotic map parameter (should be between 3.57 and 4.0)
LOGISTIC_MAP_R=3.99

# API Key used by API Gateway to hit this service securely
ENGINE_API_KEY=your_secure_randomly_generated_api_key
