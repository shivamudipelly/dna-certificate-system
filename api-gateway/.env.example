# ==========================================
# API Gateway Environment Variables (Example)
# ==========================================

# The port the API Gateway runs on 
PORT=5000

# MongoDB Connection String (MUST HAVE Authentication in Prod)
MONGO_URI=mongodb://username:password@localhost:27017/dna_cert_db?authSource=admin

# JWT Secret for Signing Admin Tokens
JWT_SECRET=your_super_secret_jwt_signature_key

# URL of the Crypto Engine Microservice (Internal Network Only)
CRYPTO_ENGINE_URL=http://localhost:8000

# API Key for accessing the Crypto Engine (Must match ENGINE_API_KEY on the engine setup)
ENGINE_API_KEY=your_secure_randomly_generated_api_key

# The allowed Frontend Origin for CORS mappings
FRONTEND_URL=http://localhost:5173
